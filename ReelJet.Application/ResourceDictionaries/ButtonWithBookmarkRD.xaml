<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.io/icons/">

    <Style TargetType="Button" x:Key="ButtonWithBookmark">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <fa:ImageAwesome Name="icon" Icon="Bookmark" Foreground="Gray" Height="30" Width="30" VerticalAlignment="Top" HorizontalAlignment="Left" ></fa:ImageAwesome>
                        <Image x:Name="image" Source="{StaticResource AddedImg}" Width="20" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="3 0 0 0" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>